@model JobInn.Models.TablePage.Jobseekers.Jobseeker

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_JobInn_Layout.cshtml";
}
<!--WRAPPER START-->

<div id="wrapper">

    <!--HEADER START-->
    <!--INNER BANNER START-->

    <section id="inner-banner">

        <div class="container">

            <h1>@Model.full_name</h1>

        </div>

    </section>

    <!--INNER BANNER END-->
    <!--MAIN START-->

    <div id="main">

        <!--RECENT JOB SECTION START-->

        <section class="resumes-section padd-tb">

            <div class="container">

                <div class="row">

                    <div class="col-md-9 col-sm-8">

                        <div class="resumes-content">

                            <div class="box">

                                <div class="frame"><a href="#"><img src="~/Content/images/resumes/resumes-img-1.jpg" alt="img"></a></div>

                                <div class="text-box">

                                    <h2><a href="#">@Model.full_name</a></h2>

                                    <h4>@Model.professional_title</h4>

                                    <div class="clearfix"> <strong><i class="fa fa-map-marker"></i>@Model.location</strong>
                                    

                                    @foreach (var item2 in Model.url)
                                    {  
                                        <strong>
                                            <a href="@item2.url_link">

                                                <i class="fa fa-globe"></i>
                                                @item2.url_name
                                            </a>
                                         </strong>
                                       
                                    }
                                    <span class="price"><i class="fa fa-money"></i>@Model.min_rate</span>

                                    <div class="tags"> <a href="#"><i class="fa fa-tags"></i>@Model.jobcategory.jobcategory_name,</a>
                                        @foreach (var item2 in Model.skill)
                                        {
                                            <a href="#">@item2.skill_name,</a>
                                        }
                                        </div>
                                    <div class="btn-row"> <a href="#" class="resume">
                                        <i class="fa fa-file-text-o"></i>Resume?</a> 
                                        <a href="#" class="contact">Contac?t</a>
                                        <a href="#" class="login">Login to Bookmark this Resume?</a> </div>

                                </div>

                            </div>

                            <div class="summary-box">

                                <h4>@Model.professional_title</h4>

                                <p>@Model.description</p>

                            </div>

                                <div class="summary-box">
                                    <h4>Education</h4>

                                    @foreach (var item in Model.education)
                                    {

                                        <div class="outer">
                                            <strong class="title">@item.school_name</strong>

                                            <div class="col">
                                                <span>@item.startent_date</span>

                                                <p> @item.description</p>

                                            </div>

                                        </div>
                                        


                                    }
                                </div>





                                   

                            <div class="summary-box">

                                <h4>Work Experience</h4>

                                @foreach (var item in Model.experince)
                                { 
                                    

                                <div class="outer">
                                    <strong class="title">@item.company_name</strong>

                                    <div class="col">
                                        <span>@item.startend_date</span>

                                        <p> @item.description</p>

                                    </div>

                                </div>



                                }

                             

                            </div>

                            <div class="skills-box">

                                <h4>Skills</h4>

                                @foreach (var item in Model.skill)
                                {
                                    <div class="progress-box">
                                        <strong class="title">@item.skill_name</strong>

                                        <div class="progress">

                                            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width:@item.skill_degree%;"> <span> @item.skill_degree%</span> </div>

                                        </div>

                                    </div>
                                }
                             
                            </div>

                        </div>

                    </div>
                      </div>
                       
                    <div class="col-md-3 col-sm-4">

                        <h2>Related People</h2>

                        <aside>

                            <div class="sidebar">

                                <div class="related-people">

                                    <ul>

                                    @*@foreach (var item in Model)
                                    {
                                        <li>

                                            <div class="frame"><a href="#"><img src="~/Content/images/resumes/related-img-1.jpg" alt="img"></a></div>

                                            <div class="text-box">
                                                <strong class="name">
                                                    <a href="#">@item.full_name</a>
                                                </strong>
                                                <span><i class="fa fa-tags"></i>@item.jobcategory.jobcategory_name</span>
                                                <span><i class="fa fa-map-marker"></i>@item.location</span>
                                            </div>

                                        </li>
                                    }*@

                                    </ul>

                                </div>

                            </div>

                        </aside>

                    </div>

                </div>

            </div>

        </section>

        <!--RECENT JOB SECTION END-->

    </div>

    <!--MAIN END-->
</div>