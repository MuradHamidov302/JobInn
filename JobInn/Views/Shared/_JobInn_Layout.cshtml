                                                    <li>@Html.ActionLink("Company Form", "Create", "Companies")</li>

                                                </ul>

                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Blogs<span class="caret"></span></a>

                                                <ul class="dropdown-menu" role="menu">

                                                    <li>@Html.ActionLink("Blogs Listing", "Index", "Blogs")</li>
