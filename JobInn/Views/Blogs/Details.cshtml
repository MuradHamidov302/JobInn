@model JobInn.Models.TablePage.Blogs.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_JobInn_Layout.cshtml";
}<!--WRAPPER START-->

<div id="wrapper">

    <!--INNER BANNER START-->

    <section id="inner-banner">

        <div class="container">

            <h1>@Model.blog_title...</h1>

        </div>

    </section>

    <!--INNER BANNER END-->
    <!--MAIN START-->

    <div id="main">



        <!--POST AREA START-->

        <section class="post-section blog-post">

            <div class="container">

                <div class="row">

                    <div class="col-md-9 col-sm-8">

                        <div class="post-box">

                            <div class="frame">
                            <a href="#"><img src="~/Content/images/blog/blog-detail-img.jpg" alt="img"></a></div>

                            <div class="text-box">

                                <div class="clearfix"> <strong class="date"><i class="fa fa-user"></i>@Model.company.company_name</strong> <strong class="date"><i class="fa fa-calendar"></i>@Model.blog_datetime</strong> </div>

                                <h4><a href="#">@Model.blog_title</a></h4>

                                <p>@Model.blog_maintext</p>

                             
                                <blockquote>

                                    <p>@Model.blog_alerttext</p>

                                </blockquote>


                                <h4>@Model.blog_smallhead</h4>

                                <p>@Model.blog_smalltext</p>


                            </div>

                        </div>

                        <div class="comment-form">

                            <form action="form.php" method="post">

                                <h2>Leave a Comment</h2>

                                <div class="row">

                                    <div class="col-md-4">

                                        <input name="name" required pattern="[a-zA-Z ]+" type="text" placeholder="Name">

                                    </div>

                                    <div class="col-md-4">

                                        <input name="email" required pattern="^[a-zA-Z0-9-\_.]+[a-zA-Z0-9-\_.]+\.[a-zA-Z0-9.]{2,5}$" type="text" placeholder="Email">

                                    </div>

                                    <div class="col-md-4">

                                        <input name="website" required type="text" placeholder="Website">

                                    </div>

                                    <div class="col-md-12">

                                        <textarea name="comments" required cols="10" rows="10" placeholder="Comments"></textarea>

                                    </div>

                                    <div class="col-md-12">

                                        <input type="submit" value="Submit">

                                    </div>

                                </div>

                            </form>

                        </div>

                    </div>

                    <div class="col-md-3 col-sm-4">

                        <aside>

                            <div class="sidebar">

                                <h4>Text Widget</h4>

                                <div class="box">

                                    <div class="frame"><a href="#"><img src="images/blog/blog-test-widget.jpg" alt="img"></a></div>

                                    <div class="text-col">

                                        <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusa doloremque laudantium, totam rem aperiam eaque ipsa quae.</p>

                                    </div>

                                </div>

                                <h4>Recent Posts</h4>

                                <div class="box">

                                    <div class="recent-post">

                                        <ul>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-1.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>Dana Lincon</a> <a href="#"><i class="fa fa-calendar"></i>Mar 17, 2016 </a> </div>

                                            </li>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-2.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>Austin Cherrist</a> <a href="#"><i class="fa fa-calendar"></i>Feb 20, 2016</a> </div>

                                            </li>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-3.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>John Doe</a> <a href="#"><i class="fa fa-calendar"></i>Feb 09, 2016 </a> </div>

                                            </li>

                                        </ul>

                                    </div>

                                </div>

                                <h4>Archives</h4>

                                <div class="box">

                                    <div class="archives-box">

                                        <ul>

                                            <li><a href="#">January 2016<span>(10)</span></a></li>

                                            <li><a href="#">August 2015<span>(14)</span></a></li>

                                            <li><a href="#">February 2015<span>(20)</span></a></li>

                                            <li><a href="#">December 2014<span>(07)</span></a></li>

                                            <li><a href="#">July 2014<span>(05)</span></a></li>

                                        </ul>

                                    </div>

                                </div>

                            </div>

                        </aside>

                    </div>

                </div>

            </div>

        </section>

        <!--POST AREA END-->

    </div>

    <!--MAIN END-->
</div>
