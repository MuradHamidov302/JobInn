@model JobInn.Models.TablePage.JobseekersViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_JobInn_Layout.cshtml";
}


<!--WRAPPER START-->

<div id="wrapper">



    <!--INNER BANNER START-->

    <section id="inner-banner">

        <div class="container">

            <h1>JobSeekers</h1>

        </div>

    </section>

    <!--INNER BANNER END-->
    <!--MAIN START-->

    <div id="main">



        <!--RESUME PROCESS SECTION START-->

        <section class="resume-process padd-tb">

            <div class="container">

                <h2>Post your Resume &amp; Apply Online for Jobs in all over the World</h2>

                <strong>Create your professional resume with online resume builder and start applying for best jobs in all over the World</strong>

                <div class="row">

                    <div class="col-md-3 col-sm-6">

                        <div class="option-box">

                            <div class="icon-box icon-colo-1"><i class="fa fa-files-o"></i></div>

                            <h4>Create Your Resume</h4>

                            <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusant.</p>

                        </div>

                    </div>

                    <div class="col-md-3 col-sm-6">

                        <div class="option-box">

                            <div class="icon-box icon-colo-2"><i class="fa fa-bell"></i></div>

                            <h4>Get Daily Job Alerts</h4>

                            <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy.</p>

                        </div>

                    </div>

                    <div class="col-md-3 col-sm-6">

                        <div class="option-box">

                            <div class="icon-box icon-colo-3"><i class="fa fa-paper-plane-o"></i></div>

                            <h4>Apply for Your Jobs</h4>

                            <p>Duis autem vel eum iriure dolor in hendre in vulputate velit esse molestie.</p>

                        </div>

                    </div>

                    <div class="col-md-3 col-sm-6">

                        <div class="option-box">

                            <div class="icon-box icon-colo-4"><i class="fa fa-check-square-o"></i></div>

                            <h4>Get Hired</h4>

                            <p>Dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam.</p>

                        </div>

                    </div>

                </div>

            </div>

        </section>

        <!--RESUME PROCESS SECTION END-->
        <!--ACCOUNT OPTION SECTION START-->

        <section class="account-option">

            <div class="container">

                <div class="inner-box">

                    <div class="text-box">

                        <h4>Have an Account?</h4>

                        <p>
                            If you don’t have an account you can create one below by entering your email address.

                            A password will be automatically emailed to you.
                        </p>

                    </div>

                    <a href="~/Companies/Create" class="btn-style-1"><i class="fa fa-sign-in"></i>Create Your Company</a>
                </div>

            </div>

        </section>

        <!--ACCOUNT OPTION SECTION END-->
        <!--RESUME FORM START-->

        <section class="resum-form padd-tb">

            <div class="container">

                @using (Html.BeginForm("Create", "Jobseekers", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="row">

                        <div class="col-md-6 col-sm-6">

                            <label>Full Name *</label>
                            @Html.EditorFor(model => model.full_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your full name" } })
                           

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Your Email *</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "you@jobsalerts.com" } })
                           

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Professional Title *</label>
                            @Html.EditorFor(model => model.professional_title, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. “App Developer”" } })
                         

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Location *</label>
                            @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. New York, Australia, London”" } })
                            

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Job type</label>
                            @Html.DropDownList("jobtype_id", null, htmlAttributes: new { @class = "form-control" })
                           

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Resume Category *</label>
                            @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                           

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Minimum rate/h ($)</label>
                            @Html.EditorFor(model => model.min_rate, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. $20" } })
                            

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Upload Your Photo</label>

                            <div class="upload-box">

                                <div class="hold">
                                    <a href="#">Maximum file size 10 MB</a> <span class="btn-file">
                                        Browse File
                                    <input name="profilimg" type="file" />

                                    </span>
                                </div>

                            </div>

                        </div>

                        <div class="col-md-12">
                            <label>Description</label>
                             <div class="text-editor-box">

                                    @Html.EditorFor(model => model.description1, new { @class = "txtEditor form-control" })

                                </div>

                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Add Your Skills</label>
                            <div class="col-md-9">@Html.EditorFor(model => model.skill_name, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <div class="col-md-3">@Html.EditorFor(model => model.skill_degree, new { htmlAttributes = new { @class = "form-control" , @placeholder = "0-100" } })</div>
                           
                            <div class="col-md-9">@Html.EditorFor(model => model.skill_name, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <div class="col-md-3">@Html.EditorFor(model => model.skill_degree, new { htmlAttributes = new { @class = "form-control", @placeholder = "0-100" } , @min = "0",@max = "100",@type="number" })</div>

                            <div class="col-md-9">@Html.EditorFor(model => model.skill_name, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <div class="col-md-3">@Html.EditorFor(model => model.skill_degree, new { htmlAttributes = new { @class = "form-control", @placeholder = "0-100" } })</div>
                        </div>

                        <div class="col-md-6 col-sm-6">

                            <label>Resume File</label>

                            <div class="upload-box">

                                <div class="hold">
                                    <a href="#">Maximum file size 20 MB</a> <span class="btn-file">
                                        Browse File
                                    <input name="resumeimg" type="file" />

                                    </span>
                                </div>

                            </div>

                        </div>

                        <div class="accordion-style-1">

                            <div class="col-md-4 col-sm-4">

                                <h4>Add URL(s)</h4>

                                <div class="cp_aaccordion-row">

                                    <div class="accordion_cp" id="section9"><span><i class="fa fa-minus"></i></span>Add URL </div>

                                    <div class="contain_cp_accor">

                                        <div class="content_cp_accor">

                                            <ul>

                                                <li>

                                                    <label>Name</label>
                                                    @Html.EditorFor(model => model.url_name, new { htmlAttributes = new { @class = "form-control"} })
                                                   

                                                </li>

                                                <li>

                                                    <label>URL</label>
                                                    @Html.EditorFor(model => model.url_link, new { htmlAttributes = new { @class = "form-control" } })
                                                   

                                                </li>

                                            </ul>

                                        </div>

                                    </div>

                                </div>
                             

                            </div>

                            <div class="col-md-4 col-sm-4">

                                <h4>Add Education</h4>

                                <div class="cp_aaccordion-row">

                                    <div class="accordion_cp" id="section10"><span><i class="fa fa-chevron-right"></i></span>Add Education </div>

                                    <div class="contain_cp_accor">

                                        <div class="content_cp_accor">

                                            <ul>

                                                <li>

                                                    <label>School Name</label>
                                                    @Html.EditorFor(model => model.school_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    

                                                </li>

                                                <li>

                                                    <label>Start / End Date</label>
                                                    @Html.EditorFor(model => model.startent_date, new { htmlAttributes = new { @class = "form-control" } })
                                                 

                                                </li>

                                                <li>

                                                    <label>Description (optional)</label>
                                                    @Html.TextAreaFor(model => model.description2, new { htmlAttributes = new { @class = "form-control" } })
                                                   

                                                </li>

                                            </ul>

                                        </div>

                                    </div>

                                </div>
                              
                            </div>

                            <div class="col-md-4 col-sm-4">

                                <h4>Experience</h4>

                                <div class="cp_aaccordion-row">

                                    <div class="accordion_cp" id="section11"><span><i class="fa fa-chevron-right"></i></span>Add Experience </div>

                                    <div class="contain_cp_accor">

                                        <div class="content_cp_accor">

                                            <ul>

                                                <li>

                                                    <label>Employer</label>
                                                    @Html.EditorFor(model => model.company_name, new { htmlAttributes = new { @class = "form-control" } })
                            

                                                </li>


                                                <li>

                                                    <label>Start / End Date</label>
                                                    @Html.EditorFor(model => model.startend_date, new { htmlAttributes = new { @class = "form-control" } })
                                                   

                                                </li>

                                                <li>

                                                    <label>Description (optional)</label>
                                                    @Html.TextAreaFor(model => model.description3, new { htmlAttributes = new { @class = "form-control" } })
                                                    

                                                </li>

                                            </ul>

                                        </div>

                                    </div>

                                </div>
                            
                            </div>

                        </div>

                        <div class="col-md-12">

                            <div class="btn-col">

                                <input type="submit" value="Preview Your Resume">

                            </div>

                        </div>

                    </div>
                }

        </div>

        </section>

        <!--RESUME FORM END-->

    </div>

    <!--MAIN END--> 

</div>