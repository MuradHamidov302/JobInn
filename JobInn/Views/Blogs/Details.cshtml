@model JobInn.Models.TablePage.Blogs.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_JobInn_Layout.cshtml";
}
@*comment css file*@
<style>
    .comment .col-md-12 {
        padding: 40px 0;
        border-top: 1px solid #DDDDDD;
        border-bottom: 1px solid #DDDDDD;
    }

        .comment .col-md-12 li ul li {
            margin-left: 115px;
        }

        .comment .col-md-12 li {
            list-style: none;
            padding-top: 15px;
        }

            .comment .col-md-12 li .block {
                padding: 6px;
                margin: 15px 0 0 115px;
                background: #FFFFFF;
            }

    .comment .btn-rply {
        height: 25px;
        width: 60px;
        font-size: 12px;
        background: #1B8AF3;
        border-radius: 3px;
        color: white;
    }

        .comment .btn-rply:hover {
            background: #FFC107;
        }

    .comment .col-md-12 li img {
        width: 85px;
        height: 85px;
        float: left;
    }
</style>
@*comment end*@


<!--WRAPPER START-->

<div id="wrapper">

    <!--INNER BANNER START-->

    <section id="inner-banner">

        <div class="container">

            <h1>@Model.blog_title...</h1>

        </div>

    </section>

    <!--INNER BANNER END-->
    <!--MAIN START-->

    <div id="main">



        <!--POST AREA START-->

        <section class="post-section blog-post">

            <div class="container">

                <div class="row">

                    <div class="col-md-9 col-sm-8">

                        <div class="post-box">

                            <div class="frame">
                                <a href="#">
                                    @if (Model.blog_img==null)
                                    {
                                        <img style="width:850px;height:350px;" src="~/Content/images/blog.jpg" alt="img">
                                    }
                                    else
                                    {
                                        <img style="width:850px;height:350px;"  src="~/Content/images/blog/@Model.blog_img" alt="img">
                                    }

                                </a>

                            </div>

                            <div class="text-box">

                                <div class="clearfix"> <strong class="date"><i class="fa fa-user"></i>@Model.company.company_name</strong> <strong class="date"><i class="fa fa-calendar"></i>@Model.blog_datetime</strong> </div>

                                <h4><a href="#">@Model.blog_title</a></h4>

                                <p>@Html.Raw(Model.blog_maintext)</p>


                                <blockquote>

                                    <p>@Model.blog_alerttext</p>

                                </blockquote>


                                <h4>@Model.blog_smallhead</h4>

                                <p>@Model.blog_smalltext</p>


                            </div>

                        </div>


                        <div class="comment-form">
                            <div class="addPage">

                                <div class="comment">
                                    <div class="col-md-12">
                                        <h3>Comments</h3>
                                        <h6 class="reply"></h6>
                                        @*partila comment list*@

                                        <div class="commentpartial">
                                            <ul>

                                                @foreach (var item in Model.blogcomment)
                                                {
                                                    <li>
                                                        <img class="img-thumbnail" src="~/Content/images/Guest.png" alt="">
                                                        <div class="block">
                                                            <h4>
                                                                @item.user_name

                                                            <button class="pull-right btn-rply" data-id="@item.blogcomment_id">Reply</button>
                                                        </h4>
                                                        <p>@item.comment_text</p>


                                                    </div>

                                                    <ul>
                                                        @foreach (var item1 in item.commentreply)
                                                        {
                                                            <li>
                                                                <img class="img-thumbnail" src="~/Content/images/Guest.png" alt="">
                                                                <div class="block">
                                                                    <h4>@item1.user_name</h4>
                                                                    <p>@item1.comment_text</p>
                                                                </div>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                                }

                                            </ul>
                                        </div>
                                      

                                        <div class="col-md-10">
                                            <form role="form">

                                                <div class="row rplys" style="background-color:#F5F5F5;
                                                                        position:absolute;
                                                                        padding:15px;
                                                                        z-index:36;
                                                                        border-radius:2px;
                                                                        border:1px solid lightgrey;
                                                                          display:none; ">
                                                    <button class="btn btn-close pull-right btn-danger">X</button>
                                                    <h2>Reaply a Comment</h2>
                                                    <div class="col-md-4">

                                                        <input name="name1" id="name1"  type="text" placeholder="Name">


                                                        <input name="email1" id="Email1" required pattern="^[a-zA-Z0-9-\_.]+\.[a-zA-Z0-9.]{2,5}$" type="text" placeholder="Email">
                                                        <input class="Add" type="submit" id="send1" value="submit">
                                                    </div>
                                                    <div class="col-md-6">

                                                        <textarea name="comments1" id="comment1" required cols="10" rows="4" placeholder="Comments"></textarea>

                                                    </div>


                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                    
                                </div>
                                </div>

                                <form role="form">

                                    <h2>Leave a Comment</h2>

                                    <div class="row">

                                        <div class="col-md-4">

                                            <input name="name" id="name"  type="text" placeholder="Name">

                                        </div>

                                        <div class="col-md-4">

                                            <input name="email" id="Email"  type="text" placeholder="Email">

                                        </div>
                                        <div class="col-md-12">

                                            <textarea name="commentr" id="commentr" required cols="10" rows="10" placeholder="Comments"></textarea>

                                        </div>

                                        <div class="col-md-12">

                                            <input class="Add" data-id="@Model.blog_id" type="submit" id="send" value="submit">

                                        </div>

                                    </div>

                                </form>

                            </div>



                    </div>

                    <div class="col-md-3 col-sm-4">

                        <aside>

                            <div class="sidebar">

                                <h4>Text Widget</h4>

                                <div class="box">

                                    <div class="frame"><a href="javascript:void(0)"><img src="images/blog/blog-test-widget.jpg" alt="img"></a></div>

                                    <div class="text-col">

                                        <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusa doloremque laudantium, totam rem aperiam eaque ipsa quae.</p>

                                    </div>

                                </div>

                                <h4>Recent Posts</h4>

                                <div class="box">

                                    <div class="recent-post">

                                        <ul>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-1.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>Dana Lincon</a> <a href="#"><i class="fa fa-calendar"></i>Mar 17, 2016 </a> </div>

                                            </li>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-2.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>Austin Cherrist</a> <a href="#"><i class="fa fa-calendar"></i>Feb 20, 2016</a> </div>

                                            </li>

                                            <li>
                                                <strong>
                                                    <a href="#">
                                                        Middle Class jobs are being

                                                        replaced by flipping
                                                    </a>
                                                </strong>

                                                <div class="img-frame"><a href="#"><img src="images/blog/recent-img-3.jpg" alt="img"></a></div>

                                                <div class="text-area"> <a href="#"><i class="fa fa-user"></i>John Doe</a> <a href="#"><i class="fa fa-calendar"></i>Feb 09, 2016 </a> </div>

                                            </li>

                                        </ul>

                                    </div>

                                </div>

                                <h4>Archives</h4>

                                <div class="box">

                                    <div class="archives-box">

                                        <ul>

                                            <li><a href="#">January 2016<span>(10)</span></a></li>

                                            <li><a href="#">August 2015<span>(14)</span></a></li>

                                            <li><a href="#">February 2015<span>(20)</span></a></li>

                                            <li><a href="#">December 2014<span>(07)</span></a></li>

                                            <li><a href="#">July 2014<span>(05)</span></a></li>

                                        </ul>

                                    </div>

                                </div>

                            </div>

                        </aside>

                    </div>

                </div>

            </div>

        </section>

        <!--POST AREA END-->

    </div>

    <!--MAIN END-->
</div>


